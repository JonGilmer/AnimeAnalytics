@model Anime

<div id="wrapper"><!-- warpper -->

    <!-- header -->
    <div id="header" class="content-block header-wrapper" style="background-image: url()">
    @*@Model.BannerImageURL*@
        <div class="header-wrapper-inner">
            <section class="top clearfix">
                    <div class="pull-left">
                        @*<h1><a class="logo" href="Index.html">AnimeAnalytics</a></h1>*@
                    </div>
                </section>
        </div>
    </div><!-- /header -->

    <!-- anime search -->
    <div class="content-block" id="anime_info_id">
        <div class="container text-center">
            <header class="block-heading clearfix fade-in">
                <h1 class="title">Welcome to <strong>Anime</strong>Analytics!</h1>
                <h2 class="fade-in">Search For Any Anime!</h2>
            </header>
            <section class="block-body">
                <div class="anime_info col-md-8">
                    @*FORMAT: @using (Html.BeginForm("Method_Name", "Controller_Name[EXCLUDE CONTROLLER]", FormMethod.Post))*@
                    @using (Html.BeginForm("DisplayAnimeTitleExists", "AnimeInfo", FormMethod.Post))
                    {
                        <table>
                            <tr>
                                <td><label for="searchTitle">Enter Anime Title: </label></td>
                                <td><input type="text" id="searchTitle" placeholder="Anime Title" name="searchTitle" /></td>
                                @*<td>@Html.TextBoxFor(chosenAnime => chosenAnime.SearchTitle)</td>*@
                            </tr>
                            @*<tr>
                                <td>Enter Your API Key: </td>
                                <td>@Html.TextBoxFor(anime => anime.API_Key)</td>
                            </tr>*@
                            <tr>
                                <td colspan="2"><input type="submit" class="btn btn-search" value="Search Anime" /></td>
                            </tr>
                        </table>
                    }
                </div>
            </section>
        </div>    <!-- /anime search -->
    </div>
</div><!-- /wrapper -->

