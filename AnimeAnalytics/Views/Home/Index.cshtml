@model Anime

<!--------------------- EMBEDDED STYLE ----------------------->
<style>


    /* <!--------------------- IMAGES -----------------------> */

    .bg {
        background-image: url('/css/images/animeanalytics_index_wallpaper.jpg');
        background-size: cover;
        height: 1900px;
        width: 100%;
        position: relative;
        font-size: 16px;
        z-index: 1;
        overflow-x: hidden;
        margin-bottom: -2px;
    }

    /* <!--------------------- BUTTONS -----------------------> */

    a {
        -moz-transition: all .4s ease-in-out;
        -o-transition: all .4s ease-in-out;
        -webkit-transition: all .4s ease-in-out;
        transition: all .4s ease-in-out;
        color: whitesmoke;
    }

    .btn.btn-search {
		font-size: 16px;
		color: white;
		cursor: pointer;
		border: 1px solid white;
		color: white;
		background: transparent;

		border-radius: 5px;
		-moz-transition: all .4s ease-in-out;
		-o-transition: all .4s ease-in-out;
		-webkit-transition: all .4s ease-in-out;
		transition: all .4s ease-in-out;
	}

	.btn.btn-search:hover {
		color: #09071d;
		font-weight: bold;
		border: none;
		background-image: linear-gradient(-45deg, rgb(255, 236, 239), rgb(119, 190, 226));
		box-shadow: 0 4px 15px 0 rgba(119, 190, 226, 0.75);
	}

    /* <!--------------------- TEXT -----------------------> */
    .title {
        font-size: 4em;
        font-style: oblique;
        filter: drop-shadow(0px 0px 16px rgb(119, 190, 226));
    }

    .search-title {
        font-weight: bold;
        font-size: 22px;
    }

    .main-anime-text {
        font-size: x-large;
    }

    .search-field {
        box-shadow: 0 4px 15px 0 rgba(119, 190, 226, 0.30);
    }

	.search-field:hover {
		box-shadow: 0 4px 15px 0 rgba(119, 190, 226, 0.75)
	}

    /* <!--------------------- TEXT FADE -----------------------> */
    .fade-in {
        animation: fadeIn ease 1.2s;
        -webkit-animation: fadeIn ease 1.2s;
        -moz-animation: fadeIn ease 1.2s;
        -o-animation: fadeIn ease 1.2s;
        -ms-animation: fadeIn ease 1.2s;
    }

    @@keyframes fadeIn {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    @@-moz-keyframes fadeIn {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    @@-webkit-keyframes fadeIn {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    @@-o-keyframes fadeIn {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    @@-ms-keyframes fadeIn {
        0% {
            opacity: 0;
        }

        100% {
            opacity: 1;
        }
    }

    /* <!--------------------- CONTAINERS -----------------------> */
    .content-block {
        overflow: hidden;
        margin: 100px;
        padding-top: 80px;
        padding-bottom: 80px;
        padding-left: 100px;
        padding-right: 100px;
        color: rgb(255, 255, 255);
    }

    .content-block-inner {
        margin-left: 10%;
        margin-right: 10%;
        width: auto;
    }

    .body {
        margin-top: 60px;
        flex-grow: 1;
        width: auto;
    }

    .body-search {
        color: white;
        background-color: #312f45;
        overflow: hidden;
        padding-top: 80px;
        padding-bottom: 80px;
    }

    .search-section {
        vertical-align: middle;
        align-content: center;
        width: auto;
        height: 400px;
        color: white;
        overflow: hidden;
        padding-top: 80px;
        padding-bottom: 80px;
    }

    .table-search {
        width: 100%;
        table-layout: auto;
    }

    .search-row {
        margin-top: 20px;
        margin-bottom: 10px;
        margin-left: 40px;
        margin-right: 40px;
        padding: 20px;
        height: 60px;
        width: 100%;
    }

</style>

<div class="bg"><!-- warpper -->

    <!-- anime search -->
    <div class="content-block">
        <div class="content-block-inner text-center">


            <header class="fade-in">
                <h1 class="title">Welcome to <strong>Anime</strong>Analytics!</h1>
                <h2>Get Details On Your Favorite Anime!</h2>
            </header>


            <section class="body fade-in">
                <div class="search-section">
                    @using (Html.BeginForm("DisplayAnimeTitleExists", "AnimeInfo", FormMethod.Post))
                    {
                        <table class="table-search">
                            <tr class="search-row">
                                <td>
                                    <label for="searchTitle" class="search-title">
                                        <h3><strong>Enter Anime Title:</strong></h3>
                                        (Use correct punctuation and capitalization)
                                    </label>
                                </td>
                            </tr>
                            <tr class="search-row">
                                <td><input type="text" id="searchTitle" class="search-field" placeholder="Anime Title" name="searchTitle" /></td>
                            </tr>
                            <tr class="search-row">
                                <td><input type="submit" class="btn btn-search" value="Search Anime" /></td>
                            </tr>
                        </table>
                    }
                </div>
            </section>


        </div>    <!-- /anime search -->
    </div>
</div><!-- /wrapper -->