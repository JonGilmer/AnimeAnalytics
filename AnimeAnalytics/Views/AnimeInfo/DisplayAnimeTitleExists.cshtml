@model Anime

<!--------------------- EMBEDDED STYLE ----------------------->
<style>


	/* <!--------------------- IMAGES -----------------------> */
    .body-background {
        background-image: linear-gradient(90deg, rgb(255, 236, 239), rgb(119, 190, 226), rgb(255, 236, 239));
        font-size: 16px;
    }

	.banner-image {
		background-size: cover;
		display: table;
		height: 60vh;
		width: 100%;
		position: relative;
		z-index: 1;
		overflow-x: hidden;
		margin-bottom: -2px;
	}

	.main-cover-image {
		filter: drop-shadow(0px 0px 16px rgb(41, 41, 41));
	}

    .recommended-anime {
        filter: drop-shadow(0px 0px 16px rgb(41, 41, 41));
        text-align: center;
        vertical-align: middle;
        width: 230px;
        height: 345px;
        background-size: 100%;
        background-position: center;
        position: relative;
        margin-top: 10%;
        margin-bottom: 10%;
    }

	.recommended-anime span{
		margin-top: 20px;
		opacity: 0;
		position: relative;
		z-index: 1;
	}

	.recommended-anime:before {
		background: #09071da5;
		height: 100%;
		width: 100%;
		position: absolute;
		left: 0;
		top: 0;
		content: '';
		opacity: 0;
		-o-transition: all .2s;
		-ms-transition: all .2s;
		-moz-transition: all .2s;
		-webkit-transition: all .2s;
		transition: all .2s;
	}

	.recommended-anime:hover {
			background-size: 150%;
			background-position: center;
		}

	.recommended-anime:hover:before, .recommended-anime:hover span {
			opacity: 1;
		}

    /* <!--------------------- BUTTONS -----------------------> */

    a {
        -moz-transition: all .4s ease-in-out;
        -o-transition: all .4s ease-in-out;
        -webkit-transition: all .4s ease-in-out;
        transition: all .4s ease-in-out;
        color: whitesmoke;
    }

    btn-recommended-anime {
        text-align: center;
        background-image: linear-gradient(to right, #6253e1, #852D91, #A3A1FF, #F24645);
        width: auto;
        font-size: 16px;
        color: white;
        cursor: pointer;
        margin: 20px;
        border: 2px solid white;
        background-size: 300% 100%;

        border-radius: 50px;
        -moz-transition: all .4s ease-in-out;
        -o-transition: all .4s ease-in-out;
        -webkit-transition: all .4s ease-in-out;
        transition: all .4s ease-in-out;
    }


	btn-recommended-anime:hover {
		background-position: 100% 0;
		-moz-transition: all .4s ease-in-out;
		-o-transition: all .4s ease-in-out;
		-webkit-transition: all .4s ease-in-out;
		transition: all .4s ease-in-out;

		background-image: linear-gradient(to right, #6253e1, #852D91, #A3A1FF, #F24645);
		box-shadow: 0 4px 15px 0 rgba(126, 52, 161, 0.75);
	}

	.btn.btn-search {
		font-size: 16px;
		color: white;
		cursor: pointer;
		border: 1px solid white;
		color: white;
		background: transparent;

		border-radius: 5px;
		-moz-transition: all .4s ease-in-out;
		-o-transition: all .4s ease-in-out;
		-webkit-transition: all .4s ease-in-out;
		transition: all .4s ease-in-out;
	}

	.btn.btn-search:hover {
		color: #09071d;
		font-weight: bold;
		border: none;
		background-image: linear-gradient(-45deg, rgb(255, 236, 239), rgb(119, 190, 226));
		box-shadow: 0 4px 15px 0 rgba(119, 190, 226, 0.75);
	}

	/* <!--------------------- TEXT -----------------------> */
	.title {
		font-size: 4em;
		font-style: oblique;
	}

	.main-anime-text {
		text-align: left;
		font-size: x-large;
		filter: drop-shadow(0px 0px 16px rgb(41, 41, 41));
	}

	.recommended-titles {
		font-size: 1.3em;
		filter: drop-shadow(0px 0px 16px rgb(41, 41, 41));
	}

	.search-field {
        box-shadow: 0 4px 15px 0 rgba(119, 190, 226, 0.30);
    }

	.search-field:hover {
		box-shadow: 0 4px 15px 0 rgba(119, 190, 226, 0.75)
	}

	/* <!--------------------- TEXT FADE -----------------------> */
	.fade-in {
		animation: fadeIn ease 1.2s;
		-webkit-animation: fadeIn ease 1.2s;
		-moz-animation: fadeIn ease 1.2s;
		-o-animation: fadeIn ease 1.2s;
		-ms-animation: fadeIn ease 1.2s;
		}
		@@keyframes fadeIn {
			0% {
			opacity:0;
			}
			100% {
			opacity:1;
			}
		}

		@@-moz-keyframes fadeIn {
			0% {
			opacity:0;
			}
			100% {
			opacity:1;
			}
		}

		@@-webkit-keyframes fadeIn {
			0% {
			opacity:0;
			}
			100% {
			opacity:1;
			}
		}

		@@-o-keyframes fadeIn {
			0% {
			opacity:0;
			}
			100% {
			opacity:1;
			}
		}

		@@-ms-keyframes fadeIn {
			0% {
			opacity:0;
			}
			100% {
			opacity:1;
		}
	}

	/* <!--------------------- CONTAINERS -----------------------> */

	.content-block {
		overflow: hidden;
        margin: 100px;
		padding-top: 80px;
		padding-bottom: 80px;
        padding-left: 100px;
        padding-right: 100px;
		color: rgb(255, 255, 255);
	}

    .content-block-inner {
        margin-left: 10%;
        margin-right: 10%;
        width: auto;
    }

    .body {
        margin-top: 60px;
        display: flex;
        width: auto;
    }

    .body-info {
        width: 50%;
        height: 430px;
        position: relative;
        display: table;
        width: auto;

        background-size: 100%;
        background-repeat: no-repeat;
        background-position: center;
        margin-bottom: 10%;
    }

	.body-recommended {
		margin-top: 20px;
		margin-bottom: 10px;
        height: auto;
        display: table;
        align-content: center;
        align-items: center;
        width: 100%;
        flex-grow: 1;
	}

    .recommended-row {
        margin: 20px;
        padding: 20px;
        height: 100%;
        width: 100%;
    }

	.body-search {
		color: white;
		background-color: #312f45;
		overflow: hidden;
		padding-top: 80px;
		padding-bottom: 80px;
	}

	.table-search {
        width: 100%;
        table-layout: auto;
    }

    .search-row {
        margin-top: 20px;
        margin-bottom: 10px;
        margin-left: 40px;
        margin-right: 40px;
        padding: 20px;
        height: 60px;
        width: 100%;
    }

</style>



<div class="body-background"><!-- wrapper-->

    <!-- header-->
    <div class="banner-image" style="background-image: url(@Model.BannerImageURL)">
    </div>
    <!-- /header-->


    <!-- anime info-->
    <div class="content-block">
        <div class="content-block-inner text-center">
            <header class="fade-in">
                <h1 class="title">@Model.Title</h1>
                <h2>@Model.TitleNative</h2>
            </header>


            <section class="body">
                <div class="body-info col-md-6">
                    <img src="@Model.CoverImageARURL" class="main-cover-image">
                </div>

                <div class="body-info col-md-6 main-anime-text">
                    @*Html.Raw prevents razor from displaying raw text (i.e. <br>, <strong>, etc.*@
                    @Html.Raw(@Model.Description)
                    <br>
                    <br>
                    Year: @Model.SeasonYear
                    <br>
                    <br>
                    Average Rating: @Model.AverageScore
                </div>
            </section>
                <!-- /anime info-->


                <!-- recommended anime-->
                <header class="clearfix">
                    <h1 class="title">Recommended Anime</h1>
                    <h2 style="font-style: italic;">If you enjoyed @Model.Title, then you may also enjoy these!</h2>
                </header>

            <section>
                <table class="body-recommended">
                    <tr class="recommended-row">
                        <td style="width: 25%">
                            <img src=@Model.RecAnime1_CoverImage class="recommended-anime" >
                        </td>
                        <td style="width: 25%">
                            <img src=@Model.RecAnime2_CoverImage class="recommended-anime" >
                        </td>

                        <td style="width: 25%">
                            <img src=@Model.RecAnime3_CoverImage class="recommended-anime" >
                        </td>

                        <td style="width: 25%">
                            <img src=@Model.RecAnime4_CoverImage class="recommended-anime" >
                        </td>
                    </tr>
                    <tr class="recommended-row">
                        <td class="recommended-titles" style="width: 25%">
                            @Html.ActionLink(
                                linkText: @Model.RecAnime1_Title,
                                actionName: "DisplayAnimeTitleExists",
                                controllerName: "AnimeInfo",
                                routeValues: new
                                {
                                    searchTitle = @Model.RecAnime1_Title
                                },
                                htmlAttributes: null
                            )
                        </td>
                        <td class="recommended-titles" style="width: 25%">
                            @Html.ActionLink(
                                linkText: @Model.RecAnime2_Title,
                                actionName: "DisplayAnimeTitleExists",
                                controllerName: "AnimeInfo",
                                routeValues: new
                                {
                                    searchTitle = @Model.RecAnime2_Title
                                },
                                htmlAttributes: null
                            )
                        </td>
                        <td class="recommended-titles" style="width: 25%">
                            @Html.ActionLink(
                                linkText: @Model.RecAnime3_Title,
                                actionName: "DisplayAnimeTitleExists",
                                controllerName: "AnimeInfo",
                                routeValues: new
                                {
                                    searchTitle = @Model.RecAnime3_Title
                                },
                                htmlAttributes: null
                            )
                        </td>
                        <td class="recommended-titles" style="width: 25%">
                            @Html.ActionLink(
                                linkText: @Model.RecAnime4_Title,
                                actionName: "DisplayAnimeTitleExists",
                                controllerName: "AnimeInfo",
                                routeValues: new
                                {
                                    searchTitle = @Model.RecAnime4_Title
                                },
                                htmlAttributes: null
                            )
                        </td>
                    </tr>
                </table>
            </section>
        </div>
    </div>
    <!-- /recommended anime-->


    <!-- search-->
    <div class="body-search">
        <div class="container text-center">
            <header>
                <h1>Search For Another Anime</h1>
            </header>

            <section>
                @using (Html.BeginForm("DisplayAnimeTitleExists", "AnimeInfo", FormMethod.Post))
                {
                    <table class="table-search">
                        <tr class="search-row">
                            <td>
                                <label for="searchTitle" class="search-title">
                                    <h3><strong>Enter Anime Title:</strong></h3>
                                    (Use correct punctuation and capitalization)
                                </label>
                            </td>
                        </tr>
                        <tr class="search-row">
                            <td><input type="text" id="searchTitle" class="search-field" placeholder="Anime Title" name="searchTitle" /></td>
                        </tr>
                        <tr class="search-row">
                            <td><input type="submit" class="btn btn-search" value="Search Anime" /></td>
                        </tr>
                    </table>
                }
            </section>
        </div>
    </div>
    <!-- /search-->

</div><!-- /wrapper-->
