@model Anime

<div id="wrapper">

    <!-- header -->
    <div id="header" class="content-block header-wrapper" style="background-image: url(@Model.BannerImageURL)">
        <section class="top clearfix">
        </section>
    </div><!-- /header -->


    <!-- anime info -->
    <div class="content-block" id="anime_info_id">
        <div class="container text-center">
            <header class="block-heading clearfix fade-in">
                <h1 class="title">@Model.Title</h1>
                <h2 class="fade-in">@Model.TitleNative</h2>
            </header>
            <section class="block-body">
                <div class="anime_info col-md-8">
                    <img src="@Model.CoverImageARURL" style="filter: drop-shadow(0px 0px 16px rgb(41, 41, 41));">
                </div>
                <div class="anime_info col-md-4 left">
                    @Model.Description
                    <br>
                    <br>
                    Year: @Model.SeasonYear
                    <br>
                    <br>
                    Average Rating: @Model.AverageScore
                </div><!-- /anime info -->


                <!-- recommended anime -->
                <header class="block-heading clearfix fade-in">
                    <h1 class="title">Recommended Anime</h1>
                    <h2 class="fade-in">If you enjoyed @Model.Title, then you might also like these!</h2>
                </header>

                <div class="row">
                    <div class="col-sm-3">
                        <a href="" class="recommended-anime" style="background-image: url(@Model.RecAnime1_CoverImage)">
                            <span class="btn btn-recommended-anime">
                                @Html.ActionLink(
                                   linkText: "Go to Anime!",
                                   actionName: "DisplayAnimeTitleExists",
                                   controllerName: "AnimeInfo",
                                   routeValues: new
                                   {
                                            searchTitle = @Model.RecAnime1_Title
                                   },
                                   htmlAttributes: null
                                )
                            </span>
                        </a>
                    </div>

                    <div class="col-sm-3">
                        <a href="" class="recommended-anime" style="background-image: url(@Model.RecAnime2_CoverImage)">
                            <span class="btn btn-recommended-anime">
                                @Html.ActionLink(
                                   linkText: "Go to Anime!",
                                   actionName: "DisplayAnimeTitleExists",
                                   controllerName: "AnimeInfo",
                                   routeValues: new
                                   {
                                        searchTitle = @Model.RecAnime2_Title
                                   },
                                   htmlAttributes: null
                                )
                            </span>
                        </a>
                    </div>

                    <div class="col-sm-3">
                        <a href="" class="recommended-anime" style="background-image: url(@Model.RecAnime3_CoverImage)">
                            <span class="btn btn-recommended-anime">
                                @Html.ActionLink(
                                   linkText: "Go to Anime!",
                                   actionName: "DisplayAnimeTitleExists",
                                   controllerName: "AnimeInfo",
                                   routeValues: new
                                   {
                                        searchTitle = @Model.RecAnime3_Title
                                   },
                                   htmlAttributes: null
                                )
                            </span>
                        </a>
                    </div>

                    <div class="col-sm-3">
                        <a href="" class="recommended-anime" style="background-image: url(@Model.RecAnime4_CoverImage)">
                            <span class="btn btn-recommended-anime">
                                @Html.ActionLink(
                                   linkText: "Go to Anime!",
                                   actionName: "DisplayAnimeTitleExists",
                                   controllerName: "AnimeInfo",
                                   routeValues: new
                                   {
                                        searchTitle = @Model.RecAnime4_Title
                                   },
                                   htmlAttributes: null
                                )
                            </span>
                        </a>
                    </div>
                </div>

                <div class="row"><!-- Titles -->
                    <div class="col-sm-3 center">
                        @Html.ActionLink(
                            linkText: @Model.RecAnime1_Title,
                            actionName: "DisplayAnimeTitleExists",
                            controllerName: "AnimeInfo",
                            routeValues: new
                            {
                                searchTitle = @Model.RecAnime1_Title
                            },
                            htmlAttributes: null
                        )
                    </div>
                    <div class="col-sm-3 center">
                        @Html.ActionLink(
                            linkText: @Model.RecAnime2_Title,
                            actionName: "DisplayAnimeTitleExists",
                            controllerName: "AnimeInfo",
                            routeValues: new
                            {
                                searchTitle = @Model.RecAnime2_Title
                            },
                            htmlAttributes: null
                        )
                    </div>
                    <div class="col-sm-3 center">
                        @Html.ActionLink(
                            linkText: @Model.RecAnime3_Title,
                            actionName: "DisplayAnimeTitleExists",
                            controllerName: "AnimeInfo",
                            routeValues: new
                            {
                                searchTitle = @Model.RecAnime3_Title
                            },
                            htmlAttributes: null
                        )
                    </div>
                    <div class="col-sm-3 center">
                        @Html.ActionLink(
                            linkText: @Model.RecAnime4_Title,
                            actionName: "DisplayAnimeTitleExists",
                            controllerName: "AnimeInfo",
                            routeValues: new
                            {
                                searchTitle = @Model.RecAnime4_Title
                            },
                            htmlAttributes: null
                        )
                    </div>
                </div>
            </section>
        </div>
    </div><!-- /recommended anime -->


    <!-- search -->
    <div class="content-block" id="search">
        <div class="container text-center">
            <header class="block-heading clearfix">
                <h1>Search For Another Anime</h1>
            </header>

            <section class="block-body">
                <div class="row row-bottom">
                    <div class="col-md-6 col-md-offset-3">
                        @using (Html.BeginForm("DisplayAnimeTitleExists", "AnimeInfo", FormMethod.Post))
                        {
                            <table class="table-search">
                                <tr class="search-row">
                                    <td>
                                        <label for="searchTitle" class="search-title">
                                            <strong>Enter Anime Title:</strong>
                                            <br>
                                            <italics>(Use correct punctuation and capitalization)</italics>
                                        </label>
                                    </td>
                                </tr>
                                <tr class="search-row">
                                    <td><input type="text" id="searchTitle" class="search-field" placeholder="Anime Title" name="searchTitle" /></td>
                                </tr>
                                <tr class="search-row">
                                    <td><input type="submit" class="btn btn-search" value="Search Anime" /></td>
                                </tr>
                            </table>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div><!-- /search -->

</div><!-- /wrapper-->



